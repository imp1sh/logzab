UserParameter=fail2ban.sshban, sudo /bin/grep ssh /var/log/fail2ban.log |grep -c Ban
UserParameter=fail2ban.sshunban, sudo /bin/grep ssh /var/log/fail2ban.log |grep -c Unban

UserParameter=fail2ban.dovecotban, sudo /bin/grep dovecot /var/log/fail2ban.log |grep -c Ban
UserParameter=fail2ban.dovecotunban, sudo /bin/grep dovecot /var/log/fail2ban.log |grep -c Unban

UserParameter=fail2ban.postfixban, sudo /bin/grep postfix /var/log/fail2ban.log |grep -c Ban
UserParameter=fail2ban.postfixunban, sudo /bin/grep postfix /var/log/fail2ban.log |grep -c Unban

UserParameter=fail2ban.postfix-saslban, sudo /bin/grep postfix-sasl /var/log/fail2ban.log |grep -c Ban
UserParameter=fail2ban.postfix-saslunban, sudo /bin/grep postfix-sasl /var/log/fail2ban.log |grep -c Unban

UserParameter=fail2ban.sieveban, sudo /bin/grep sieve /var/log/fail2ban.log |grep -c Ban
UserParameter=fail2ban.sieveunban, sudo /bin/grep sieve /var/log/fail2ban.log |grep -c Unban
